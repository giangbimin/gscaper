
<!-- Header -->
<div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200 dark:border-gray-700">
  <div class="">
    <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200">
      Keywords
    </h2>
    <div class="sm:col-span-1">
      <%= form_with(url: keywords_path, method: :get, data: {controller: "search-form", turbo_frame: "#{current_user.id}_keywords", turbo_action: "advance"}) do |form| %>
        <div class="flex space-x-3">
          <%= form.text_field :query, class: "py-2 px-3 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600", placeholder: "Input here" %>
          <%= form.submit 'Search', class: "py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class="inline-flex gap-x-2">
      <a class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href=<%= new_keyword_path %>>
        <svg class="flex-shrink-0 w-3 h-3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M2.63452 7.50001L13.6345 7.5M8.13452 13V2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        Add Keywords
      </a>
    </div>
  </div>
</div>
<!-- End Header -->