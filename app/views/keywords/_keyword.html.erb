<div id="<%= dom_id keyword %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= keyword.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= keyword.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total link:</strong>
    <%= keyword.total_link %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total result:</strong>
    <%= keyword.total_result %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total ad:</strong>
    <%= keyword.total_ad %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this keyword", keyword, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
