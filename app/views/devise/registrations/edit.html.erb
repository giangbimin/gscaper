<div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
  <div class="p-4 sm:p-7">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Edit <%= resource_name.to_s.humanize %></h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          <% end %>
          <%= link_to "Back", :back, class: "text-blue-600 decoration-2 hover:underline font-medium dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
        </p>
      </div>

      <div class="mt-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <%= f.label :email, class: "block text-sm mb-2 dark:text-white" %>
              <div class="relative">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
                <div class="hidden absolute inset-y-0 end-0 flex items-center pointer-events-none pe-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
              <% if resource.errors && resource.errors[:email] %>
                <p data-turbo-cache="false" class="text-xs text-red-600 mt-2"><%= resource.errors[:email].join(", ")%></p>
              <% end %>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
              <div class="relative">
                <div class="flex justify-between items-center">
                  <%= f.label :password, class: "block text-sm mb-2 dark:text-white" %>
                  <i>(leave blank if you don't want to change it)</i>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
                <div class="hidden absolute inset-y-0 end-0 flex items-center pointer-events-none pe-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
              <% if resource.errors && resource.errors[:password] %>
                <p data-turbo-cache="false" class="text-xs text-red-600 mt-2"><%= resource.errors[:password].join(", ")%></p>
              <% end %>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
              <div class="relative">
                <div class="flex justify-between items-center">
                  <%= f.label :password_confirmation, class: "block text-sm mb-2 dark:text-white" %>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
                <div class="hidden absolute inset-y-0 end-0 flex items-center pointer-events-none pe-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
              <% if resource.errors && resource.errors[:password_confirmation] %>
                <p data-turbo-cache="false" class="text-xs text-red-600 mt-2"><%= resource.errors[:password_confirmation].join(", ")%></p>
              <% end %>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
              <div class="relative">
                <div class="flex justify-between items-center">
                  <%= f.label :current_password, class: "block text-sm mb-2 dark:text-white" %>
                  <i>(we need your current password to confirm your changes)</i>
                </div>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
                <div class="hidden absolute inset-y-0 end-0 flex items-center pointer-events-none pe-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
            </div>
            <!-- End Form Group -->

            <%= f.submit "Update", class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600"  %>
          </div>
        <% end %>
        <!-- End Form -->
      </div>
    </div>
  </div>
</div>
